{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "@electron-forge/plugin-vite/forge-vite-env"
    ]
  },
  "include": ["src/renderer/src", "src/shared", "src/main", "src/preload", "src/types", "vite.renderer.config.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
